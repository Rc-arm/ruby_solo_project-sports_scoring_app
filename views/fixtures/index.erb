<head>
  <title>Ultimate Hackathon League - Fixtures</title>
</head>

<body>
  <h1>Fixtures</h1>

  <div class="add-fixture">
    <p class="btn">
      <a class="btn" href="/fixtures/new">Add a Fixture</a>
    </p>
  </div>

  <% @fixtures.each do |fixture| %>
    <p><b><%= fixture.team_a.name %></b> <i>vs</i> <b><%= fixture.team_b.name %></b></p>
    <p>Winner: <b><%= fixture.winning_team.name %>!</b></p>
    <a class="btn" href="/fixtures/<%= fixture.id %>/edit">Edit</a>
    <form method="post" action="/fixtures/<%= fixture.id %>/delete">
      <input type="submit" value="Delete"/>
    </form>
    <hr />
  <% end %>

</body>
